<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!--tabs-->
    <android.support.design.widget.TabLayout
        android:id="@+id/main_tl_tabs"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/zj_blue_100"
        app:elevation="5dp"
        app:tabIndicatorColor="@color/zj_white_1000"
        app:tabSelectedTextColor="@color/zj_white_1000"
        app:tabTextColor="@color/zj_white_1000" />

    <!--页面容器-->
    <android.support.v4.view.ViewPager
        android:id="@+id/main_vp_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>